@model IEnumerable<TrangwebCellPhoneS.Models.Order>
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

    .card-header-red {
        background-color: #dc3545;
        color: white;
    }

    .table-header-red th {
        background-color: #dc3545;
        color: white;
        border-color: #a71d2a;
    }

    .order-history-card {
        box-shadow: 0 4px 8px rgba(0,0,0,0.05);
        border: none;
        margin-top: 20px;
    }

    .empty-cart-message {
        text-align: center;
        padding: 40px;
    }
</style>

<div class="card order-history-card">
    <div class="card-header card-header-red">
        <h3 class="mb-0">LỊCH SỬ ĐƠN HÀNG CỦA BẠN</h3>
    </div>
    <div class="card-body px-0 py-0">
        @* Xóa padding để table vừa khít *@

        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-header-red">
                        <tr>
                            <th>Mã đơn hàng</th>
                            <th>Ngày đặt</th>
                            <th>Địa chỉ giao hàng</th>
                            <th>Tổng tiền</th>
                            <th>Trạng thái thanh toán</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var order in Model)
                        {
                            <tr>
                                <td>@order.OrderID</td>
                                <td>@order.OrderDate.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@order.ShippingAddress</td>
                                <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                                <td>@order.PaymentStatus</td>
                                <td>
                                    @Html.ActionLink("Xem chi tiết",
                                              "OrderSuccess",
                                              "Order",
                                              new { id = order.OrderID },
                                              new { @class = "btn btn-danger btn-sm" })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="empty-cart-message">
                <h4 class="text-muted">Bạn chưa có đơn hàng nào.</h4>
                <p>Hãy bắt đầu mua sắm ngay bây giờ!</p>
                @Html.ActionLink("Về trang chủ", "Index", "Home", null, new { @class = "btn btn-danger" })
            </div>
        }
    </div>
</div>


