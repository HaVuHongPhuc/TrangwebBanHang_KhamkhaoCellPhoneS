@model TrangwebCellPhoneS.Models.Order
@{
    ViewBag.Title = "OrderSuccess";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* (Bạn có thể bỏ qua thẻ style này nếu đã định nghĩa ở file .css chung
    hoặc trong file _Layout.cshtml) *@
<style>
    .card-header-red {
        background-color: #dc3545;
        color: white;
    }

    .table-header-red th {
        background-color: #dc3545;
        color: white;
        border-color: #a71d2a;
    }

    .order-details-card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.05);
        border: none;
        margin-top: 20px;
    }
</style>

<div class="alert alert-success text-center" role="alert">
    <h4 class="alert-heading">ĐẶT HÀNG THÀNH CÔNG!</h4>
    <p>Cảm ơn bạn đã mua hàng. Đơn hàng của bạn đã được ghi nhận và sẽ sớm được xử lý.</p>
</div>

<div class="row">
    <div class="col-lg-6">
        <div class="card order-details-card">
            <div class="card-header card-header-red">
                <h4 class="mb-0">Thông tin đơn hàng</h4>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-5">Mã đơn hàng:</dt>
                    <dd class="col-sm-7">@Model.OrderID</dd>

                    <dt class="col-sm-5">Ngày đặt hàng:</dt>
                    <dd class="col-sm-7">@Model.OrderDate.ToString("dd/MM/yyyy")</dd>

                    <dt class="col-sm-5">Địa chỉ giao hàng:</dt>
                    <dd class="col-sm-7">@Model.ShippingAddress</dd>

                    <dt class="col-sm-5">Phương thức thanh toán:</dt>
                    <dd class="col-sm-7">@Model.PaymentMethod</dd>

                    <dt class="col-sm-5">Phương thức giao hàng:</dt>
                    <dd class="col-sm-7">@Model.DeliveryMethod</dd>

                    <dt class="col-sm-5">Trạng thái thanh toán:</dt>
                    <dd class="col-sm-7">@Model.PaymentStatus</dd>

                    <dt class="col-sm-5">Người nhận hàng:</dt>
                    <dd class="col-sm-7">@Model.Consignee</dd>

                    <dt class="col-sm-5">Mail của người nhận hàng:</dt>
                    <dd class="col-sm-7">@Model.ConsigneeEmail</dd>

                    <dt class="col-sm-5">Số điện thoại của người nhận hàng:</dt>
                    <dd class="col-sm-7">@Model.ConsigneePhone  </dd>

                    <hr class="col-11">

                    <dt class="col-sm-5 h5 text-danger">Tổng số tiền:</dt>
                    <dd class="col-sm-7 h5 text-danger">
                        <strong>@Model.TotalAmount.ToString("N0") VNĐ</strong>
                    </dd>
                </dl>
            </div>
        </div>
    </div>

    <div class="col-lg-6">
        <div class="card order-details-card">
            <div class="card-header card-header-red">
                <h4 class="mb-0">Chi tiết sản phẩm</h4>
            </div>
            <div class="card-body px-0 py-0">
                <div class="table-responsive">
                    <table class="table table-striped table-hover mb-0">
                        <thead class="table-header-red">
                            <tr>
                                <th>Sản phẩm</th>
                                <th>Số lượng</th>
                                <th>Đơn giá</th>
                                <th>Thành tiền</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderDetails)
                            {
                                <tr>
                                    <td>@item.Product.ProductName</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.UnitPrice</td>
                                    <td>@item.TotalPrice</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
