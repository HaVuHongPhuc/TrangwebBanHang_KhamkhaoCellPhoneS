@model TrangwebCellPhoneS.Models.ViewModel.CheckoutVM
@{
    ViewBag.Title = "Thông tin giao hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/Thanhtoan.css" />

<main class="shipping-page">
    <h2>Thông tin giao hàng</h2>
    @using (Html.BeginForm("Shipping", "Order", FormMethod.Post, new { @class = "shipping-form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <label>Họ và tên</label>
            @Html.TextBoxFor(m => m.ConsigneeName, new { placeholder = "Nhập họ và tên", required = "required" })
        </div>

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(m => m.ConsigneeEmail, new { placeholder = "Nhập email", type = "email" })
        </div>

        <div class="form-group">
            <label>Số điện thoại</label>
            @Html.TextBoxFor(m => m.ConsigneePhone, new { placeholder = "Nhập số điện thoại", required = "required" })
            @Html.ValidationMessageFor(m => m.ConsigneePhone, "", new {@class = "text-danger"})
        </div>

        <div class="form-group">
            <label>Địa chỉ cụ thể</label>
            @Html.TextBoxFor(m => m.ShippingAddress, new { placeholder = "Số nhà, tên đường...", required = "required" })
        </div>

        <div class="form-group">
            <label>Tỉnh / Thành</label>
            @Html.DropDownListFor(m => m.City, new List<SelectListItem> {
                new SelectListItem { Text = "Hà Nội", Value = "Hà Nội" },
                new SelectListItem { Text = "Hồ Chí Minh", Value = "Hồ Chí Minh" }
            }, "Chọn Tỉnh/Thành", new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Quận / Huyện</label>
            @Html.TextBoxFor(m => m.District, new { placeholder = "Nhập Quận/Huyện" })
        </div>

        <div style="margin-top: 20px;">
            <button type="submit" class="btn btn-danger cart-button" style="width: 100%; padding: 10px; font-weight: bold;">
                TIẾP TỤC ĐẾN THANH TOÁN
            </button>
        </div>
    }
</main>

