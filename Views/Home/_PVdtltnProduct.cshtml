@model IEnumerable<TrangwebCellPhoneS.Models.Product>

<style>
    .grid-container-6 {
        display: flex;
        flex-wrap: wrap;
        gap: 15px;
        margin-bottom: 30px;
    }
    .grid-item-6 {
        background: #fff;
        border-radius: 10px;
        padding: 10px;
        border: 1px solid #eee;
        transition: all 0.3s ease;
        /* Công thức chia 6 cột: (100% - 5 khoảng trống) / 6 */
        width: calc((100% - (15px * 5)) / 6);
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }
    .grid-item-6:hover {
        box-shadow: 0 5px 15px rgba(0,0,0,0.15);
        transform: translateY(-3px);
    }
</style>

@if (Model != null && Model.Any())
{
    <div class="grid-container-6">
        @foreach (var product in Model)
        {
            <div class="grid-item-6">
                <div style="height: 160px; display:flex; align-items:center; justify-content:center; overflow:hidden; margin-bottom:10px;">
                    <a href="@Url.Action("ProductDetails", "Home", new {id = product.ProductID})">
                        <img src="@product.ProductImage" alt="@product.ProductName" style="max-width:100%; max-height:100%; object-fit:contain;" />
                    </a>
                </div>

                <div style="height: 40px; overflow: hidden; margin-bottom: 5px;">
                    <a href="@Url.Action("ProductDetails", "Home", new {id = product.ProductID})"
                       style="color: #444; font-weight: 600; text-decoration: none; font-size: 13px; line-height: 1.4; display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical;">
                        @product.ProductName
                    </a>
                </div>

                <div style="margin-bottom: 5px;">
                    <span style="color: #d70018; font-weight: bold; font-size: 15px;">
                        @product.ProductPrice.ToString("N0")₫
                    </span>
                </div>

                <div style="display: flex; justify-content: space-between; font-size: 11px; color: #777; align-items: center;">
                    <span><i class="fa-solid fa-star" style="color: #f59e0b;"></i> 5.0</span>
                    <span>Đã bán: @product.OrderDetails.Count</span>
                </div>
            </div>
        }
    </div>
}
else
{
    <p style="text-align:center; color:#999;">Đang cập nhật sản phẩm...</p>
}
