@model IEnumerable<TrangwebCellPhoneS.Models.Product>

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
<style>
    .product-grid-container {
        display: grid;
        /* Mặc định PC: 5 cột bằng nhau */
        grid-template-columns: repeat(5, 1fr);
        gap: 10px; /* Khoảng cách giữa các ô */
        padding: 10px 0;
    }
    .product-card {
        background: #fff;
        border-radius: 10px;
        padding: 10px;
        display: flex;
        flex-direction: column;
        position: relative;
        overflow: hidden;
        /* Cố định kích thước để không bị co giãn */
        min-width: 220px;
        width: 220px;
        flex-shrink: 0;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
    }

        .product-card:hover {
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
            transform: translateY(-3px);
            border-color: #d70018; /* Viền đỏ khi hover */
        }

    /* Ảnh sản phẩm */
    .card-img-wrap {
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 0 10px 0;
        aspect-ratio: 1 / 1;
        overflow: hidden;
    }

        .card-img-wrap img {
            width: auto;
            height: auto;
            max-width: 100%;
            max-height: 100%;
            object-fit: contain;
        }

    .product-card:hover .card-img-wrap img {
        transform: scale(1.05);
    }

    /* Tên sản phẩm */
    .prod-card-name {
        font-size: 14px;
        font-weight: 600;
        color: #333;
        text-decoration: none;
        line-height: 1.3;
        margin-bottom: 5px;
        /* Giới hạn 2 dòng */
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        height: 36px; /* Chiều cao cố định cho 2 dòng */
    }

        .prod-card-name:hover {
            color: #d70018;
        }

    /* Danh mục */
    .prod-card-cate {
        font-size: 11px;
        color: #888;
        background: #f8f8f8;
        padding: 2px 5px;
        border-radius: 4px;
        display: inline-block;
        margin-bottom: 5px;
    }

    /* Giá tiền */
    .prod-card-price {
        color: #d70018;
        font-weight: bold;
        font-size: 16px;
        margin-bottom: 8px;
        display: block;
    }

    /* Footer (Sao + Yêu thích + Giỏ hàng) */
    .card-footer-row {
        display: flex;
        justify-content: space-between;
        font-size: 11px;
        color: #777;
        border-top: 1px solid #f0f0f0;
        padding-top: 8px;
    }

    .star-rate i {
        color: #f59e0b;
    }
</style>
@if (Model != null && Model.Any())
{
    <div class="product-grid-container">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="card-img-wrap">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })">
                        <img src="@product.ProductImage" alt="@product.ProductName" />
                    </a>
                </div>

                <div class="card-info">
                    <a href="@Url.Action("ProductDetails", "Home", new { id = product.ProductID })" class="prod-card-name" title="@product.ProductName">
                        @product.ProductName
                    </a>

                    <span class="prod-card-cate">@product.Category.CategoryName</span>

                    <span class="prod-card-price">
                        @product.ProductPrice.ToString("N0")₫
                    </span>
                </div>

                <div class="card-footer-row">
                    <div class="star-rate">
                        <i class="fa-solid fa-star"></i> 5.0
                    </div>
                    <div  class="sold">
                        <span style="color:#aaa">(@product.OrderDetails.Count Đã bán)</span>
                    </div>
                    <div class="wishlist">
                        Yêu thích <i class="fa-regular fa-heart"></i>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div style="text-align:center; padding: 30px; color:#999;">
        <p>Đang cập nhật sản phẩm...</p>
    </div>
}