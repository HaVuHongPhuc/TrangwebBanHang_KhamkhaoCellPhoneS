@model IEnumerable<TrangwebCellPhoneS.Models.Customer>

@{
    ViewBag.Title = "Quản lý Khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .admin-card {
        background: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0,0,0,0.05);
        border-top: 4px solid #007bff; /* Màu xanh dương */
    }

    .action-btn {
        padding: 5px 10px;
        border-radius: 4px;
        color: white;
        text-decoration: none;
        font-size: 12px;
    }

    .btn-info-custom {
        background-color: #17a2b8;
    }

        .btn-info-custom:hover {
            background-color: #138496;
            color: white;
        }
</style>
    <div class="admin-card">
            <h2><i class="fa-solid fa-users"></i> Danh sách Khách hàng</h2>
        </div>

        <table class="table table-striped table-hover">
                <tr>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>Tên đăng nhập</th>
                    <th class="text-center">Thao tác</th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td style="font-weight:500">@item.CustomerName</td>
                        <td>@item.CustomerPhone</td>
                        <td>@item.CustomerEmail</td>
                        <td>
                            <span style="background:#eef; padding:3px 8px; border-radius:4px; color:#555; font-size:12px;">
                                @item.Username
                            </span>
                        </td>
                        <td class="text-center">
                            <a href="@Url.Action("Details", new { id = item.CustomerID })" class="action-btn btn-info-custom">Chi tiết
                            </a>
                        </td>
                    </tr>
                }
        </table>
