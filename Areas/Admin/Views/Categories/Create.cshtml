@model TrangwebCellPhoneS.Models.Category

@{
    ViewBag.Title = "Thêm Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .admin-form-card {
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        max-width: 600px;
        margin: 30px auto; /* Căn giữa màn hình */
        border-top: 4px solid #28a745; /* Xanh lá */
    }

    .form-title {
        font-size: 22px;
        font-weight: bold;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
        text-transform: uppercase;
    }
</style>

<div class="admin-form-card">
    <h2 class="form-title">Thêm Danh Mục Mới</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @* Gọi Partial View Form *@
        @Html.Partial("PartialView_CreateEditCategory", Model)
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}