@model IEnumerable<TrangwebCellPhoneS.Models.Category>

@{
    ViewBag.Title = "Quản lý Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>

    /* 2. Thiết kế Khung chứa (Card) màu trắng, đổ bóng nhẹ */
    .admin-card {
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05); /* Bóng mờ nhẹ */
        padding: 25px;
        border-top: 4px solid #d70018; /* Đường viền màu đỏ CellphoneS tạo điểm nhấn */
    }

    /* 3. Tiêu đề trang */
    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        border-bottom: 1px solid #eee;
        padding-bottom: 15px;
    }

    .page-title {
        font-size: 24px;
        font-weight: bold;
        color: #333;
        margin: 0;
        text-transform: uppercase;
    }

    /* 4. Tùy chỉnh Bảng (Table) */
    .custom-table {
        width: 100%;
        border-collapse: collapse;
    }

        .custom-table thead th {
            background-color: black;
            color: #fff;
            padding: 12px;
            text-align: left;
            font-weight: 600;
            border: none;
        }

        .custom-table tbody td {
            padding: 12px;
            border-bottom: 1px solid #f0f0f0;
            color: #555;
            vertical-align: middle;
        }



    /* 5. Tùy chỉnh các nút bấm (Action Buttons) */
    .btn-action {
        margin-right: 5px;
        font-size: 13px;
        padding: 5px 10px;
        border-radius: 4px;
        text-decoration: none !important;
        transition: all 0.3s;
        display: inline-block;
    }

    .btn-edit {
        background-color: #ffc107; /* Vàng */
        color: #212529;
        border: 1px solid #ffc107;
    }

        .btn-edit:hover {
            background-color: #e0a800;
            color: #000;
        }

    .btn-details {
        background-color: #17a2b8; /* Xanh Cyan */
        color: white;
        border: 1px solid #17a2b8;
    }

        .btn-details:hover {
            background-color: #138496;
            color: white;
        }

    .btn-delete {
        background-color: #dc3545; /* Đỏ */
        color: white;
        border: 1px solid #dc3545;
    }

        .btn-delete:hover {
            background-color: #c82333;
            color: white;
        }

    .btn-add-new {
        background-color: #28a745; /* Xanh lá */
        color: white;
        padding: 8px 20px;
        border-radius: 4px;
        text-decoration: none;
        font-weight: bold;
    }

</style>

<div>
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-custom">
            <i class="fa fa-exclamation-circle"></i> @TempData["ErrorMessage"]
        </div>
    }

    <div class="admin-card">
        <div class="page-header">
            <h2 class="page-title">Danh sách Danh mục</h2>
            @Html.ActionLink("+ Thêm mới", "Create", null, new { @class = "btn-add-new" })
        </div>

        <div class="table-responsive">
            <table class="table custom-table">
                <thead>
                    <tr>
                        <th>Tên danh mục</th>
                        <th style="width: 300px; text-align: center;">Chức năng</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td style="font-weight: 500;">
                                @Html.DisplayFor(modelItem => item.CategoryName)
                            </td>
                            <td style="text-align: center;">
                                @Html.ActionLink("Sửa", "Edit", new { id = item.CategoryID }, new { @class = "btn-action btn-edit" })
                                @Html.ActionLink("Chi tiết", "Details", new { id = item.CategoryID }, new { @class = "btn-action btn-details" })
                                @Html.ActionLink("Xóa", "Delete", new { id = item.CategoryID }, new { @class = "btn-action btn-delete" })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>