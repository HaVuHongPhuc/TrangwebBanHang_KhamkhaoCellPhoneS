@model TrangwebCellPhoneS.Models.Category

@{
    ViewBag.Title = "Xóa Danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    .delete-card {
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        max-width: 500px;
        margin: 50px auto;
        text-align: center;
        border-top: 4px solid #dc3545; /* Đỏ */
    }
    .delete-info {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 6px;
        margin: 20px 0;
        font-weight: bold;
        color: #333;
    }

    .btn-confirm-delete {
        background-color: #dc3545;
        color: white;
        padding: 10px 30px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-confirm-delete:hover {
            background-color: #c82333;
        }

    .btn-cancel {
        color: #6c757d;
        text-decoration: none;
        margin-left: 15px;
        font-size: 14px;
    }
</style>

<div class="delete-card">
    <h3>Xác nhận xóa?</h3>
    <p>Bạn có chắc chắn muốn xóa danh mục này không? Hành động này không thể hoàn tác.</p>

    <div class="delete-info">
        @Html.DisplayFor(model => model.CategoryName)
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Xóa ngay" class="btn-confirm-delete" />
        @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn-cancel" })
    }
</div>