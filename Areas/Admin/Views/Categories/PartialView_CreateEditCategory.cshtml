@model TrangwebCellPhoneS.Models.Category

<style>
    .form-group {
        margin-bottom: 20px;
    }

    .control-label {
        font-weight: 600;
        margin-bottom: 8px;
        display: block;
        color: #555;
    }

    .form-control-custom {
        width: 100%;
        padding: 10px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        font-size: 14px;
        transition: border-color 0.3s;
    }

        .form-control-custom:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0,123,255,0.25);
        }

    .form-actions {
        margin-top: 30px;
        text-align: right; /* Đẩy nút sang phải */
        border-top: 1px solid #eee;
        padding-top: 20px;
    }

    .btn-save {
        background-color: #007bff; /* Xanh dương */
        color: white;
        padding: 10px 25px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-save:hover {
            background-color: #0056b3;
        }

    .btn-back {
        color: #6c757d;
        text-decoration: none;
        margin-right: 15px;
        font-size: 14px;
    }

        .btn-back:hover {
            text-decoration: underline;
        }
</style>

<div class="form-group">
    <label class="control-label">Tên danh mục <span style="color:red">*</span></label>
    <div>
        @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control-custom", placeholder = "Nhập tên danh mục..." } })
        @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger", style = "font-size: 13px; margin-top: 5px; display: block;" })
    </div>
</div>

<div class="form-actions">
    @Html.ActionLink("Quay lại", "Index", null, new { @class = "btn-back" })
    <input type="submit" value="Lưu dữ liệu" class="btn-save" />
</div>