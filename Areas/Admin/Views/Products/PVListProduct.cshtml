@model TrangwebCellPhoneS.Models.ViewModel.ProductSearchVM
@using PagedList.Mvc
@{
    ViewBag.Title = "Index";
}
<head>
    <meta charset="utf-8" />
    <link href="~/Content/PagedList.css" rel="stylesheet" />
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<style>
    img {
        height: 200px;
        max-width: 200px;
    }
</style>
@*Hiển thị danh sách sản phẩm*@
@if (Model.Products != null && Model.Products.Any())
{
    <h2 style="color:white;" class="bg-success">DANH SÁCH MỤC SẢN PHẨM</h2>

    <table class="table bg-info col-md-14">
        <tr>
            <th class="bg-success col-md-1">
                Tên sản phẩm
            </th>
            <th class="bg-success col-md-2">
                Thông số kỹ thuật
            </th>
            <th class="bg-success col-md-2">
                Tính năng nổi bật
            </th>
            <th class="bg-success col-md-1">
                Đơn giá
            </th>
            <th class="bg-success col-md-2">
                Hình ảnh
            </th>
            <th class="bg-success col-md-1">
                Danh mục sản phẩm
            </th>
            <th class="bg-success col-md-3"></th>
        </tr>


        @foreach (var item in Model.Products)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductSpecifications)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.outstandingFeatures)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td><img src=" @Html.DisplayFor(modelItem => item.ProductImage)" /></td>

                <td>
                    @Html.DisplayFor(modelItem => item.Category.CategoryName)
                </td>
                <td>
                    @Html.ActionLink("Cập nhật", "Edit", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xem chi tiết", "Details", new { id = item.ProductID }, new { @class = "btn btn-primary" }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.ProductID }, new { @class = "btn btn-primary" })
                </td>
            </tr>
        }

    </table>

    //Hiển thị phân trang
    <div class="pagination-container">
        @Html.PagedListPager(Model.Products, page => Url.Action("Index", new
   {
       page,
            searchTerm = Request.QueryString["searchTerm"],
            minPrice = Model.MinPrice,
            maxPrice = Model.MaxPrice,
            sortOrder = Model.SortOrder

   }),

        new PagedListRenderOptions { UlElementClasses = new[] { "pagination" } })
    </div>
}
else
{
    <p> Không tìm được sản phẩm nào phù hợp </p>
}
<div class="form-group">
    <div class="col-md-offset-8 col-md-4">
        @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-primary" })
    </div>
</div>
