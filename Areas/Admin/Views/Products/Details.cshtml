@model TrangwebCellPhoneS.Models.Product

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<style>
    img {
        height: 250px;
        max-width: 200px;
    }
</style>
<h2 class="bg-success">Trang chi tiết sản phẩm</h2>
<hr />
<dl class="dl-horizontal">
    <dt>
        Tên sản phẩm
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ProductName)
    </dd>

    <dt>
        Thông số kỹ thuật
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ProductSpecifications)
    </dd>

    <dt>
        Tính năng nổi bật
    </dt>

    <dd>
        @Html.DisplayFor(model => model.outstandingFeatures)
    </dd>

    <dt>
        Đơn giá
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ProductPrice)
    </dd>

    <dt>
        Hình ảnh
    </dt>

    <dd>
        @Html.DisplayFor(model => model.ProductImage)
    </dd>

    <dt>
        Tên sản phẩm
    </dt>

    <dd>
        @Html.DisplayFor(model => model.Category.CategoryName)
    </dd>

</dl>
<p>
    @Html.ActionLink("Cập nhập", "Edit", new { id = Model.ProductID }) |
    @Html.ActionLink("Trờ về danh mục", "Index")
</p>
