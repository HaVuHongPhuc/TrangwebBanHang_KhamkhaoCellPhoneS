@model TrangwebCellPhoneS.Models.Product

@{
    ViewBag.Title = "Xóa Sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    .delete-card {
        background: #fff;
        padding: 30px;
        border-radius: 8px;
        box-shadow: 0 0 15px rgba(0,0,0,0.05);
        max-width: 600px;
        margin: 50px auto;
        text-align: center;
        border-top: 4px solid #dc3545; /* Đỏ */
    }

    .delete-info {
        background: #f8f9fa;
        padding: 20px;
        border-radius: 6px;
        margin: 20px 0;
        text-align: left;
        border: 1px dashed #ccc;
    }

    .info-row {
        display: flex;
        margin-bottom: 10px;
        font-size: 14px;
    }

    .info-label {
        font-weight: bold;
        width: 150px;
        color: #555;
    }

    .btn-confirm-delete {
        background-color: #dc3545;
        color: white;
        padding: 10px 30px;
        border: none;
        border-radius: 4px;
        font-weight: bold;
        cursor: pointer;
    }

        .btn-confirm-delete:hover {
            background-color: #c82333;
        }

    .btn-cancel {
        color: #6c757d;
        text-decoration: none;
        margin-left: 15px;
        font-size: 14px;
    }
</style>

<div class="delete-card">
    <h3>Xác nhận xóa sản phẩm?</h3>
    <p class="text-muted">Hành động này không thể hoàn tác. Vui lòng kiểm tra kỹ thông tin dưới đây.</p>

    <div class="delete-info">
        <div class="info-row">
            <span class="info-label">Tên sản phẩm:</span>
            <span>@Html.DisplayFor(model => model.ProductName)</span>
        </div>
        <div class="info-row">
            <span class="info-label">Danh mục:</span>
            <span>@Html.DisplayFor(model => model.Category.CategoryName)</span>
        </div>
        <div class="info-row">
            <span class="info-label">Giá bán:</span>
            <span style="color:red; font-weight:bold;">@Html.DisplayFor(model => model.ProductPrice)</span>
        </div>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Xóa vĩnh viễn" class="btn-confirm-delete" />
        @Html.ActionLink("Hủy bỏ", "Index", null, new { @class = "btn-cancel" })
    }
</div>