@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

<style>
    /* Căn giữa nội dung trang */
    .dashboard-wrapper {
        max-width: 900px;
        margin: 50px auto;
        text-align: center;
        font-family: 'Segoe UI', sans-serif;
    }

    .dashboard-title {
        color: #333;
        font-weight: bold;
        text-transform: uppercase;
        margin-bottom: 10px;
    }

    .dashboard-subtitle {
        color: #666;
        margin-bottom: 40px;
        font-size: 16px;
    }

    /* Grid chứa 2 nút lớn */
    .menu-grid {
        display: flex;
        justify-content: center;
        gap: 30px; /* Khoảng cách giữa 2 thẻ */
        flex-wrap: wrap;
    }

    /* Thiết kế thẻ bấm (Card) */
    .menu-card {
        background-color: #fff;
        width: 350px; /* Độ rộng thẻ */
        padding: 40px 20px;
        border-radius: 15px;
        border: 2px solid #eee;
        text-decoration: none !important; /* Bỏ gạch chân link */
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        display: flex;
        flex-direction: column;
        align-items: center;
    }

        /* Hiệu ứng khi di chuột vào */
        .menu-card:hover {
            transform: translateY(-10px); /* Nổi lên */
            border-color: #d70018; /* Viền đỏ */
            box-shadow: 0 15px 30px rgba(215, 0, 24, 0.15); /* Bóng đỏ nhẹ */
        }

        /* Icon lớn */
        .menu-card i {
            font-size: 50px;
            color: #d70018; /* Màu đỏ CellphoneS */
            margin-bottom: 20px;
        }

        /* Tiêu đề trong thẻ */
        .menu-card h3 {
            color: #333;
            font-weight: bold;
            font-size: 20px;
            margin: 0 0 10px 0;
        }

        /* Mô tả nhỏ */
        .menu-card p {
            color: #777;
            font-size: 14px;
            margin: 0;
        }

</style>

<div class="dashboard-wrapper">
    <h2 class="dashboard-title">Trang Quản Trị Admin</h2>
    <p class="dashboard-subtitle">Vui lòng chọn chức năng bạn muốn thực hiện</p>

    <div class="menu-grid">
        <a href="@Url.Action("Index", "Categories")" class="menu-card">
            <i class="fa-solid fa-layer-group"></i>
            <h3>QUẢN LÝ DANH MỤC</h3>
            <p>Thêm, sửa, xóa danh mục sản phẩm</p>
        </a>

        <a href="@Url.Action("Index", "Products")" class="menu-card">
            <i class="fa-solid fa-box-open"></i>
            <h3>QUẢN LÝ SẢN PHẨM</h3>
            <p>Thêm, sửa, xóa và cập nhật giá sản phẩm</p>
        </a>
    </div>
</div>